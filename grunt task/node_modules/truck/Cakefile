# Cakefile

{exec} = require "child_process"

REPORTER = "spec"

task 'build', ->
  exec 'coffee -o bin/ -c src/'
  exec 'mv bin/truck.js bin/truck'

task "test", "run tests", ->
  exec "NODE_ENV=test 
    ./node_modules/.bin/mocha 
    --compilers coffee:coffee-script
    --reporter #{REPORTER}
    --require coffee-script 
    --colors
  ", (err, output) ->
    throw err if err
    console.log output